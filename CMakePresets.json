{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 17,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "vs",
            "hidden": true,
            "inherits": [
                "base"
            ],
            "generator": "Visual Studio 17 2022",
            "architecture": "x64"
        },
        {
            "name": "headless",
            "hidden": true,
            "cacheVariables": {
                "CLAP_PLUGINS_HEADLESS": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "wasm-clang-linux",
            "hidden": true,
            "toolchainFile": "cmake/toolchains/wasm-clang-linux.cmake"
        },
        {
            "name": "emscripten-linux",
            "hidden": true,
            "toolchainFile": "/usr/lib/emscripten/cmake/Modules/Platform/Emscripten.cmake"
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CLAP_PLUGINS_EMBED_QML": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "ninja-vcpkg",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
            "inherits": [
                "base",
                "vcpkg"
            ]
        },
        {
            "name": "ninja-headless",
            "description": "Ninja + System Libraries + Headless",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "inherits": [
                "base", "headless"
            ]
        },
        {
            "name": "vs-vcpkg",
            "description": "Visual Studio + VCPKG",
            "inherits": [
                "vs",
                "vcpkg"
            ]
        },
        {
            "name": "vs-headless",
            "description": "Visual Studio + Headless",
            "inherits": [
                "vs",
                "headless"
            ]
        },
        {
            "name": "ninja-wasm-headless",
            "description": "Ninja + System Libraries + Headless / WASM",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "inherits": [
                "base", "headless", "wasm-clang-linux"
            ]
        },
        {
            "name": "ninja-emscripten-headless",
            "description": "Ninja + System Libraries + Headless / WASM",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "inherits": [
                "base", "headless", "emscripten-linux"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "targets": [
                "clap-plugins",
                "install"
            ]
        },
        {
            "name": "ninja-vcpkg",
            "description": "Build using Ninja and VCPKG",
            "configurePreset": "ninja-vcpkg",
            "inherits": "base"
        },
        {
            "name": "ninja-headless",
            "inherits": "base",
            "description": "Build using Ninja and system libraries (headless)",
            "configurePreset": "ninja-headless"
        },
        {
            "name": "ninja-wasm-headless",
            "inherits": "base",
            "description": "Build using Ninja and system libraries (headless)",
            "configurePreset": "ninja-wasm-headless"
        },
        {
            "name": "ninja-emscripten-headless",
            "inherits": "base",
            "description": "Build using Ninja and system libraries (headless)",
            "configurePreset": "ninja-emscripten-headless"
        },
        {
            "name": "vs-vcpkg",
            "inherits": "base",
            "description": "Build using Visual Studio and VCPKG",
            "configurePreset": "vs-vcpkg"
        },
        {
            "name": "vs-headless",
            "inherits": "base",
            "description": "Build using Visual Studio (headless)",
            "configurePreset": "vs-headless"
        }
    ],
    "testPresets": [
        {
            "name": "ninja-vcpkg",
            "description": "Test using Ninja and VCPKG",
            "configurePreset": "ninja-vcpkg"
        },
        {
            "name": "ninja-headless",
            "description": "Test using Ninja and system libraries (headless)",
            "configurePreset": "ninja-headless"
        },
        {
            "name": "vs-headless",
            "description": "Test using Visual Studio (headless)",
            "configurePreset": "vs-headless"
        }
    ]
}